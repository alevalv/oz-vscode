{
    "name": "oz-vscode",
    "displayName": "MOzArt for VSCode",
    "description": "MOzArt Language Support for Visual Studio Code",
    "version": "0.0.5",
    "publisher": "alevalv",
    "license": "GNU GPLv3",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Linters",
        "Other"
    ],
    "homepage": "https://github.com/alevalv/oz-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/alevalv/oz-vscode.git"
    },
    "icon": "images/icon.png",
    "bugs": "https://github.com/alevalv/oz-vscode/issues",

    "activationEvents": [
        "onCommand:oz.build",
        "onLanguage:oz"
    ],
    "main": "./out/src/ozMain",
    "contributes": {
        "commands":[{
            "command": "oz.build",
            "title": "Compile Oz file"
        }],

        "languages": [{
            "id": "oz",
            "aliases": ["Oz", "MOzArt"],
            "extensions": [".oz", ".mozart"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [
            {
                "language": "oz",
                "scopeName": "source.oz",
                "path": "./syntaxes/oz.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "oz",
                "path": "./snippets/oz.json"
            }
        ],
        "configuration": {
            "title": "MOzArt configuration",
            "properties": {
                "oz.compilerpath":{
                    "type": "string",
                    "default": null,
                    "description": "The path to the Oz compiler"
                },
                "oz.enablelinter":{
                    "type": "boolean",
                    "default": false,
                    "description": "Enables the linting of Oz files"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
